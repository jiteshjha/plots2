<% if @node.has_tag('seeks:responses') %>

  <% @responses = DrupalTag.find_nodes_by_type("response:#{@node.id}") %>
  <% @unpaginated = true %>

  <p><a class='btn btn-primary btn-lg' href="/post?tags=response:<%= @node.id %>,hidden:response<%= ',' + (@tagnames.uniq.delete_if{|x| x.match(":") }).join(',') if @tagnames && @tagnames.length > 0%>"><%= t('notes._responses.post_response') %></a></p>

  <hr />

  <h3><%= t('notes._responses.responses') %> (<%= @responses.length %>)</h3>

  <%= render :partial => "notes/notes", locals: { notes: @responses } %>

  <hr />

<% end %>
